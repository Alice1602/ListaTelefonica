@model Agenda_Telefonica.Models.ListaTelefonica

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Lista Telefonica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <label asp-for="Email" class="control-label">E-mail:</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <label asp-for="Telefone" class="control-label">Senha:</label>
                <input asp-for="Telefone" class="form-control"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Salvar" class="btn btn-primary"/> |
                <a asp-action="Index">Voltar para agenda</a>
            </div>
        </form>
    </div>
</div>


